{
  "name": "automation-tool",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "scripts": {
    "dev": "turbo run dev",
    "temporal:dev": "cd apps/server && (temporal.exe server start-dev || temporal server start-dev)",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "dev:web": "turbo run dev --filter web",
    "dev:server": "turbo run dev --filter server"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "turbo": "latest"
  },
  "resolutions": {
    "punycode": "^2.3.1"
  },
  "overrides": {
    "punycode": "^2.3.1"
  }
}
